{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["components/*"],
        "@services/*": ["services/*"],
        "@context/*": ["context/*"],
        "@pages/*": ["pages/*"]
      },
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "strict": true,
    },
    "include": ["src/**/*", "server.js"],
    "exclude": ["node_modules", "dist"]
  }
  